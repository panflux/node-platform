        "@types/joi": "14.3.3",
        "@types/node": "12.0.0",
        "eslint": "5.16.0",
        "eslint-config-google": "0.12.0",
        "eslint-plugin-compat": "3.1.1",
        "eslint-plugin-import": "2.17.2",
        "eslint-plugin-jest": "22.5.1",
        "husky": "2.2.0",
        "jest": "24.8.0",
        "lint-staged": "8.1.6",
        "npm-run-all": "4.1.5"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.js"
        ]
